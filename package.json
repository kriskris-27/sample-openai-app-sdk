{
  "name": "mcp-top-movers-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && node ./scripts/build-widget.cjs",
    "dev": "concurrently \"tsx watch src/server.ts\" \"npm:watch:widget\"",
    "watch:widget": "esbuild web/src/widget.ts --bundle --format=esm --outfile=web/dist/widget.js --sourcemap --watch",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "esbuild": "^0.24.0",
    "nodemon": "^3.0.2",
    "tsx": "^4.19.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}

