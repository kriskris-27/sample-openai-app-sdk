{
  "name": "mcp-timer-countdown-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && node ./scripts/build-widget.cjs",
    "dev": "concurrently \"tsx watch src/server.ts\" \"npm:watch:widget\"",
    "watch:widget": "esbuild web/src/timer-widget.ts --bundle --format=esm --outfile=web/dist/timer-widget.js --sourcemap --watch",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "esbuild": "^0.24.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}